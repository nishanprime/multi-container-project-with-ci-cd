{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "nishanprime/client",
      "hostname": "client",
      "essential": "false"
    },
    {
      "name": "server",
      "image": "nishanprime/server",
      "hostname": "api",
      "essential": "false"
    },
    {
      "name": "worker",
      "image": "nishanprime/worker",
      "hostname": "worker",
      "essential": "false"
    },
    {
      "name": "nginx",
      "image": "nishanprime/nginx",
      "hostname": "nginx",
      "essential": "true",
      "portMappings": [
        {
          "hostPort": "80",
          "containerPort": "80"
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
